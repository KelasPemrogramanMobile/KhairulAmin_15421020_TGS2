<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.khairulamin.tugasdua.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Nama"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/txtNama"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Nama Anda"
            android:inputType="textNoSuggestions"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:text="NPM"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/txtNpm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="NPM Anda"
            android:inputType="textNoSuggestions"
            android:maxLines="1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:text="Fakultas"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/txtFakultas"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Fakultas Anda"
            android:inputType="textNoSuggestions"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:text="Program Study"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/txtProdi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Program Study"
            android:inputType="textNoSuggestions"
            android:maxLines="1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:text="Alamat"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/txtAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat Anda"
            android:inputType="textNoSuggestions"
            android:maxLines="1" />


        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="Nomor Hp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/txtHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor Hp"
            android:inputType="textNoSuggestions"
            android:maxLines="1" />


        <Button
            android:id="@+id/btnkirim"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Input data" />


        <Button
            android:id="@+id/exit"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Exit" />



    </LinearLayout>
</RelativeLayout>
